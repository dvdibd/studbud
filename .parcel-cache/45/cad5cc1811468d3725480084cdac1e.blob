/* https://www.digitalocean.com/community/tutorials/css-minimal-css-reset */
@import url("https://fonts.googleapis.com/css?family=Merriweather:400,700");
html {
  box-sizing: border-box;
  font-size: 16px;
}
*,
*:before,
*:after {
  box-sizing: inherit;
}
body,
h1,
h2,
h3,
h4,
h5,
h6,
p,
ol,
ul {
  margin: 0;
  padding: 0;
  font-weight: normal;
}
ol,
ul {
  list-style: none;
}
img {
  max-width: 100%;
  height: auto;
}
.app-container {
  background-color: #d3d4d9;
  padding-left: 120px;
}
.page-container {
  margin: 4em;
}
.page-container#home {
  text-align: center;
}
.page-container:not(#home) {
  display: none;
}
html {
  font-size: 100%;
}
/*16px*/
body {
  background: white;
  font-family: "Merriweather", serif;
  font-weight: 400;
  line-height: 1.75;
  color: #000000;
}
p {
  margin-bottom: 1rem;
}
h1,
h2,
h3,
h4,
h5 {
  margin: 3rem 0 1.38rem;
  font-family: "Merriweather", serif;
  font-weight: 700;
  line-height: 1.3;
}
h1 {
  margin-top: 0;
  font-size: 3.052rem;
}
h2 {
  font-size: 2.441rem;
}
h3 {
  font-size: 1.953rem;
}
h4 {
  font-size: 1.563rem;
}
h5 {
  font-size: 1.25rem;
}
small,
.text_small {
  font-size: 0.8rem;
}
nav {
  width: 100%;
  background-color: #175874;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
nav .nav-links {
  list-style: none;
  display: flex;
}
nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  color: #c8e2ff;
  padding: 1em;
}
nav .nav-links .nav-item a:hover {
  color: white;
}
nav .nav-links .nav-item a.active {
  font-weight: bold;
}
nav.vertical {
  width: 100px;
  height: 100vh;
  background-color: #012b3d;
  flex-direction: row;
  position: absolute;
  left: 0;
  top: 0;
}
nav.vertical .nav-links {
  flex-direction: column;
}
nav.vertical .nav-links .nav-item a {
  display: block;
  padding: 4em 0;
}
/* The Modal (background) */
.modal {
  display: none;
  /* Hidden by default */
  position: fixed;
  /* Stay in place */
  z-index: 1;
  /* Sit on top */
  left: 0;
  top: 0;
  width: 100%;
  /* Full width */
  height: 100%;
  /* Full height */
  overflow: auto;
  /* Enable scroll if needed */
  background-color: black;
  /* Fallback color */
  background-color: rgba(0, 0, 0, 0.4);
  /* Black w/ opacity */
}
/* Modal Content/Box */
.modal-content {
  background-color: #fefefe;
  margin: 15% auto;
  /* 15% from the top and centered */
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
  /* Could be more or less, depending on screen size */
}
/* The Close Button */
.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}
.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}
.logo {
