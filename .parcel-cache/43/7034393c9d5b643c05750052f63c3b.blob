nav {
  width: 100%;
  background-color: #175874;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
nav .nav-links {
  list-style: none;
  display: flex;
}
nav .nav-links .nav-item a {
  display: inline-block;
  text-decoration: none;
  color: #c8e2ff;
  padding: 1em;
}
nav .nav-links .nav-item a:hover {
  color: white;
}
nav .nav-links .nav-item a.active {
  font-weight: bold;
}
nav.vertical {
  width: 100px;
  height: 100%;
  background-color: #012b3d;
  flex-direction: row;
  position: absolute;
  left: 0;
  top: 0;
}
nav.vertical .nav-links {
  flex-direction: column;
}
nav.vertical .nav-links .nav-item a {
  display: block;
  padding: 4em 0;
}
/* The Modal (background) */
.modal {
  display: none;
  /* Hidden by default */
  position: fixed;
  /* Stay in place */
  z-index: 1;
  /* Sit on top */
  left: 0;
  top: 0;
  width: 100%;
  /* Full width */
  height: 100%;
  /* Full height */
  overflow: auto;
  /* Enable scroll if needed */
  background-color: black;
  /* Fallback color */
  background-color: rgba(0, 0, 0, 0.4);
  /* Black w/ opacity */
}
/* Modal Content/Box */
.modal-content {
  background-color: #fefefe;
  margin: 15% auto;
  /* 15% from the top and centered */
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
  /* Could be more or less, depending on screen size */
}
/* The Close Button */
.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}
.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}
/* refrenced from https://codepen.io/thomasvaeth/pen/QjwPgz */
.break,
.start-task,
.start-break,
.stop,
.reset,
.set-break,
.add-break,
.subtract-break,
.information {
  display: none;
}
.add-task,
.subtract-task,
.add-break,
.subtract-break {
  margin-top: 5px;
}
a,
a:focus,
a:hover {
  color: #fff;
}
button:focus {
  outline: 0 !important;
}
.btn-default,
.btn-default:hover,
.btn-default:focus {
  color: #333;
  text-shadow: none;
  background-color: #fff;
  border: 1px solid #fff;
}
.task,
.break,
.clock {
  font-size: 144px;
  font-weight: 600;
}
#pomodoroTimer body {
  height: 100%;
  background-size: cover;
  background-color: #333;
  color: #fff;
  text-align: center;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
}
.site-wrapper {
  display: table;
  width: 100%;
  height: 100%;
  /* For at least Firefox */
  min-height: 100%;
  -webkit-box-shadow: inset 0 0 100px rgba(0, 0, 0, 0.5);
  box-shadow: inset 0 0 100px rgba(0, 0, 0, 0.5);
}
.site-wrapper-inner {
  display: table-cell;
  vertical-align: top;
}
.cover-container {
  margin-right: auto;
  margin-left: auto;
}
.inner {
  padding: 30px;
}
.cover {
  padding: 0 20px;
}
.cover .btn-lg {
  padding: 10px 20px;
  font-weight: bold;
}
@media (min-width: 768px) {
  .site-wrapper-inner {
    vertical-align: middle;
  }

  .cover-container {
    width: 100%;
  }
}
@media (min-width: 992px) {
  .cover-container {
    width: 700px;
  }
}
